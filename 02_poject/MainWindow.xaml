<Window x:Class="_02_poject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_poject"
        mc:Ignorable="d"
        Title="MainWindow" MinWidth="900" MinHeight="450" Height="450" Width="900">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="250*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dataGridUsers" d:ItemsSource="{d:SampleData ItemCount=4}" Margin="0,-1,0,0" Grid.Column="1" VerticalGridLinesBrush="Black" HorizontalGridLinesBrush="#FF8A8A8A" IsReadOnly="True" HorizontalAlignment="Center" Width="409" SelectionChanged="DataGrid_SelectionChanged" SelectionMode="Single" ColumnWidth="*" AutomationProperties.IsColumnHeader="True">
            <DataGrid.BindingGroup>
                <BindingGroup/>
            </DataGrid.BindingGroup>
        </DataGrid>
        <StackPanel x:Name="spForm" Margin="28,32,0,74" Orientation="Vertical" HorizontalAlignment="Left" Width="405">
            <Label x:Name="labelUserName" Content="Nombre de usuario" Height="26" Width="147" HorizontalAlignment="Left"/>
            <TextBox x:Name="textBoxUserName" Height="36" TextWrapping="Wrap" Width="405" FontSize="20" HorizontalAlignment="Left"/>
            <Label x:Name="labelSurname" Content="Apellidos" Height="26" Width="147" HorizontalAlignment="Left"/>
            <TextBox x:Name="textBoxSurname" Height="36" TextWrapping="Wrap" Width="405" FontSize="20" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="0" Y="1"/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
            <Label x:Name="labelAdress" Content="Dirección" Height="26" Width="147" HorizontalAlignment="Left"/>
            <TextBox x:Name="textBoxAdress" Height="36" TextWrapping="Wrap" Width="405" FontSize="20" HorizontalAlignment="Left"/>
            <Label x:Name="labelPhone" Content="Teléfono" Height="26" Width="147" HorizontalAlignment="Left"/>
            <TextBox x:Name="textBoxPhone" Height="36" TextWrapping="Wrap" Width="405" FontSize="20" HorizontalAlignment="Left"/>
            <StackPanel x:Name="spChildren" Orientation="Horizontal" Margin="0,10,0,10">
                <CheckBox Name="checkBox" Content="Tengo hijos" Margin="0,0,10,0" Checked="checkBox_Checked" Unchecked="checkBox_Unchecked"/>
                <Slider Name="slider" Width="200" TickFrequency="1" Minimum="1" Maximum="20" Value="1" Margin="0,0,10,0" IsEnabled="False" ValueChanged="slider_ValueChanged" />
                <TextBlock Name="tbCountChildren" Text="Cantidad: 0" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
        <Button x:Name="btnAdd" Content="ACEPTAR" Margin="28,353,0,0" Click="aceptar_Click" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Width="104"/>
        <Button x:Name="btnBorrar" Content="BORRAR" Margin="181,353,0,0" Click="btnBorrar_Click" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Width="104"/>
        <Button x:Name="btnClear" Content="_LIMPIAR" Margin="329,353,0,0" Click="btnClear_Click" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Width="104"/>
    </Grid>
</Window>
