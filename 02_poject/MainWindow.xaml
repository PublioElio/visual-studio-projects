<Window x:Class="_02_poject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_poject"
        mc:Ignorable="d"
        Title="MainWindow" MinWidth="550" MinHeight="430" Height="430" Width="550">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="213*"/>
            <ColumnDefinition Width="337*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dataGridUsers" d:ItemsSource="{d:SampleData ItemCount=4}" Margin="0,0,0,-1" Grid.Column="1" VerticalGridLinesBrush="Black" HorizontalGridLinesBrush="#FF8A8A8A" IsReadOnly="True" HorizontalAlignment="Center" Width="338" SelectionChanged="DataGrid_SelectionChanged" SelectionMode="Single">
            <DataGrid.BindingGroup>
                <BindingGroup/>
            </DataGrid.BindingGroup>
        </DataGrid>
        <StackPanel Margin="0,32,0,104" Orientation="Vertical" HorizontalAlignment="Center" Width="166">
            <Label x:Name="labelUserName" Content="Nombre de usuario" Height="26" Width="147"/>
            <TextBox x:Name="textBoxUserName" Height="36" TextWrapping="Wrap" Width="147" FontSize="20"/>
            <Label x:Name="labelSurname" Content="Apellidos" Height="26" Width="147"/>
            <TextBox x:Name="textBoxSurname" Height="36" TextWrapping="Wrap" Width="147" FontSize="20" RenderTransformOrigin="0.5,0.5">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="0" Y="1"/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
            <Label x:Name="labelAdress" Content="Dirección" Height="26" Width="147"/>
            <TextBox x:Name="textBoxAdress" Height="36" TextWrapping="Wrap" Width="147" FontSize="20"/>
            <Label x:Name="labelPhone" Content="Teléfono" Height="26" Width="147"/>
            <TextBox x:Name="textBoxPhone" Height="36" TextWrapping="Wrap" Width="147" FontSize="20"/>
        </StackPanel>
        <Button x:Name="btnAdd" Content="ACEPTAR" Margin="0,315,0,0" Click="Button_Click" Height="35" VerticalAlignment="Top" HorizontalAlignment="Center" Width="104"/>
    </Grid>
</Window>
