<UserControl
    x:Class="examen_29_01_2024_Adriano_Diaz.UserControl1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:examen_29_01_2024_Adriano_Diaz"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="examen29"
    d:DesignHeight="175"
    d:DesignWidth="228"
    mc:Ignorable="d">
    <Grid>

        <TextBox
            x:Name="miTextBox"
            VerticalAlignment="Top"
            KeyDown="PulsarEnter"
            Text="TextBox"
            TextWrapping="Wrap" />

        <ListBox
            x:Name="miListBox"
            Margin="0,23,27,2"
            d:ItemsSource="{d:SampleData ItemCount=5}"
            KeyDown="BorrarElementoListBox"
            SizeChanged="ListBoxChanged" />

        <Slider
            x:Name="miSlider"
            Width="19"
            Margin="0,23,5,4"
            HorizontalAlignment="Right"
            IsDirectionReversed="True"
            IsEnabled="False"
            Orientation="Vertical" />

    </Grid>
</UserControl>
